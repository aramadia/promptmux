{
  "name": "promptmux",
  "productName": "PromptMux",
  "version": "1.0.0",
  "description": "Multi-AI chat interface - send prompts to ChatGPT, Gemini, and Claude simultaneously",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp src/renderer/index.html dist/renderer/ && cp src/renderer/styles.css dist/renderer/ && cp src/renderer/shim.js dist/renderer/",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "watch": "tsc -w",
    "dist": "npm run build && electron-builder"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.promptmux.app",
    "productName": "PromptMux",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
